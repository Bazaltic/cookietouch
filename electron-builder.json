{
  "appId": "me.devchris.cookietouch",
  "productName": "CookieTouch",
  "mac": {
    "category": "public.app-category.games"
  },
  "dmg": {
    "contents": [
      {
        "x": 110,
        "y": 150
      },
      {
        "x": 240,
        "y": 150,
        "type": "link",
        "path": "/Applications"
      }
    ]
  },
  "linux": {
    "target": ["AppImage", "deb"]
  },
  "win": {
    "target": "nsis",
    "icon": "build/icon.ico"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  },
  "publish": {
    "allowPrerelease": true,
    "provider": "github",
    "repo": "cookietouch-releases",
    "owner": "cookie-project",
    "vPrefixedTagName": true,
    "private": false,
    "releaseType": "draft"
  },
  "generateUpdatesFilesForAllChannels": true
}
