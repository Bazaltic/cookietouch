{
  "extends": "./node_modules/electron-webpack/tsconfig-base.json",
  "compilerOptions": {
    "target": "esnext",
    "removeComments": true,
    "jsx": "react",
    "strict": false,
    "noUnusedLocals": false,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["cookie/*"],
      "@account": ["cookie/account"],
      "@account/*": ["cookie/account/*"],
      "@game/*": ["cookie/game/*"],
      "@protocol/*": ["cookie/protocol/*"],
      "@utils/*": ["cookie/utils/*"],
      "@logger": ["cookie/core/logger"],
      "@logger/*": ["cookie/core/logger/*"],
      "@renderer/*": ["renderer/*"]
    }
  }
}
